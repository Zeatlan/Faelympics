<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Administration{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/admin/global.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>

<div class="col-lg-3 col-md-6 m-auto connexion">
    <div class="row">
        <h1>Connexion</h1>
    </div>t
    <div class="col-lg-10 col-12 m-auto pb-3">
        <form action="{{ path('login') }}" method="POST">
            <div class="form-group">
                <label for="username">Nom d'utilisateur</label>
                <input type="text" name="username" class="form-control" placeholder="Nom d'utilisateur" value="{{ last_username }}" required>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" class="form-control" placeholder="Mot de passe" required>
            </div>

            {% if error %}
                <span class="error">{{ error.messageKey }}</span>
            {% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <a href="#">Logout</a>

            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    </div>
</div>

{% block javascripts %}{% endblock %}
</body>
</html>
